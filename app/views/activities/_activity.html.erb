<div class="like_info">
  <ul>
    <%= link_to activity.owner.name, activity.owner %>
    <%= activity.message %>
    <%= link_to activity.target_name, activity.target_path %>
    <small> <%= time_ago_in_words(activity.created_at) %> ago </small>|
    <span id="like_count_<%= activity.id %>"><%= activity.likes.size %></span> likes
    <%= render "users/like_form", activity: activity %>
  </ul>
</div>
