<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Book Reviewing System", "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("title.title_home"), root_path %></li>
        <li><%= link_to t("title.title_help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("title.user"), users_path %></li>
          <li><%= link_to t("title.category"), categories_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "titile.account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("title.profile"), current_user %></li>
              <li><%= link_to t("title.setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("signup.logout"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("signup.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
