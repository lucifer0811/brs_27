<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t "title.stt" %></th>
      <th><%= t "title.name" %></th>
      <th><%= t "title.email" %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= link_to user.name, user%></td>
        <td><%= user.email %></td>
        <td>
          <% if !(user.is_admin?) %>
            <%=link_to "delete", [:admin, user],
              class: "glyphicon glyphicon-trash text-danger", method: :delete,
              data: {confirm: t("flash.check") } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
