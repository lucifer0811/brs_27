<% unless @requests.blank? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= t "title.stt" %></th>
        <th><%= t "request.name" %></th>
        <th><%= t "request.content" %></th>
        <th><%= t "request.action" %></th>
        <th><%= t "request.status" %></th>
      </tr>
    </thead>
    <tbody>
      <% @requests.each_with_index do |request, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= link_to request.user.name,request.user %></td>
          <td><%= request.book_name %></td>
          <td>
            <%= link_to t("request.delete"), [:admin,request], method: :delete,
              data:{confirm: t("flash.check")} %>
          </td>
          <td>
            <% unless request.is_approved %>
              <%= link_to (t "request.not_approved"), admin_request_path(request),
                 method: :patch %>
            <% else %>
              <%= t "request.approved" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <%= t "request.not_request" %>
<% end %>
