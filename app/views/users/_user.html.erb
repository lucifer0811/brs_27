<table class="table table-hover">
  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= gravatar_for user, class: "img-circle" %></td>
        <td><%= link_to user.name, user%></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
