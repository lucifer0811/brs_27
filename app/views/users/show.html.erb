<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %></br>
        <h3><%= @user.name %></h3>
      </h1>
    </section></br>
    <div class="col-md-8">
      <%= render "shared/stats" %>
    </div>
    <div class="col-md-8">
      <%= render "follow_form" if logged_in? %>
    </div>
  </aside>
    <div class="col-md-8">
      <div class="activity_list">
        <h3><%= t "users.activity" %></h3>
        <% unless @activities.blank? %>
          <%= render @activities %>
          <%= will_paginate @activities %>
        <% else %>
          <h3 class="none_activity"><b><%= t "activity.none" %></b></h3>
        <% end %>
      </div>
    </div>

</div>
<div class="row">
  <h4 class="favorite_title"><b><%= t "book.favorite" %></b></h4>
  <%= render partial: "books/book_index", locals: {books: @books} %>
</div>
