<div class="row">
  <% @books.each do |book| %>
    <div class="col-md-3" id="book_info">
      <%= link_to image_tag(book.picture.url, class: "book-show"),
        book_path(book) %>
      <div class="book_view">
        <small><b><%= t "book.title" %></b>: <%= book.title %></small></br>
        <small><b><%= t "book.author" %></b>: <%= book.author %></small>
      </div>
    </div>
  <% end %>
</div>
