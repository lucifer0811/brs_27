<%= form_for [@review, @review.comments.build], remote: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("comment.placeholder") %>
  </div>
  <%= f.submit t("comment.post_button"), class: "btn btn-primary" %>
<% end %>
