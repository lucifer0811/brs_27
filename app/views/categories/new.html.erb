<% provide(:title, t("categories.category_button")) %>
<h1> <%= t "category.new" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @category do |f| %>
      <%= render "shared/error_messages", object: @category %>

      <%= f.label :category_name %>
      <%= f.text_field :category_name, class: "form-control" %>

      <%= f.label :descriptions %>
      <%= f.text_field :descriptions, class: "form-control" %>

      <%= f.submit  t("categories.create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

